<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Trending1Activity">

    <TextView
        android:id="@+id/self_made_men"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape5"
        android:textColor="@color/white"
        android:padding="@dimen/tpadding1"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="@string/self_made_men"/>

    <TextView
        android:id="@+id/tpoet1"
        android:layout_below="@id/self_made_men"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/tpadding1"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:text="@string/by_stephen_leacock"
        android:textStyle="bold"
        android:background="@drawable/shape5"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/tplay1"
        android:layout_below="@+id/tpoet1"
        android:layout_width="76dp"
        android:layout_height="49dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/play"
        android:text="Play"
        android:textColor="@color/white">

    </Button>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tpoet1">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/tparagraph1"
            android:textSize="17dp"
            android:lineSpacingExtra="8sp"
            android:layout_below="@id/t1"
            android:padding="20dp"/>
    </ScrollView>

</RelativeLayout>