<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".More2Activity">

    <TextView
        android:id="@+id/eves_diary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape5"
        android:textColor="@color/white"
        android:padding="20dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="@string/eve_s_diary"/>

    <TextView
        android:id="@+id/mpoet2"
        android:layout_below="@id/eves_diary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:text="@string/by_mark_twain"
        android:textStyle="bold"
        android:background="@drawable/shape5"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/mplay2"
        android:layout_below="@+id/mpoet2"
        android:layout_width="76dp"
        android:layout_height="49dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/play"
        android:text="Play"
        android:textColor="@color/white">

    </Button>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mpoet2">

        <TextView
            android:id="@+id/m2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/mparagraph2"
            android:textSize="17dp"
            android:lineSpacingExtra="8sp"
            android:layout_below="@id/m2"
            android:padding="20dp"/>
    </ScrollView>


</RelativeLayout>